{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {},
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(npm *)",
      "Bash(pnpm *)",
      "Bash(yarn *)",
      "Bash(bun *)",
      "Bash(npx *)",
      "Bash(git status *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git fetch *)",
      "Bash(git pull *)",
      "Bash(git stash *)",
      "Bash(git rebase *)",
      "Bash(git merge *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(grep *)",
      "Bash(find *)",
      "Bash(uv *)",
      "Bash(pytest *)",
      "Bash(python *)",
      "Bash(cargo *)",
      "Bash(docker ps *)",
      "Bash(docker logs *)",
      "Bash(docker compose *)",
      "Bash(docker build *)",
      "Bash(curl *)",
      "Bash(gh *)",
      "Bash(gemini *)",
      "Bash(codex *)",
      "Bash(* --help)",
      "Bash(* --version)",
      "Bash(* status)",
      "Bash(* test)",
      "Bash(* lint)",
      "Bash(* build)",
      "WebSearch",
      "WebFetch",
      "mcp__*"
    ],
    "deny": [
      "Bash(rm -rf /:*)",
      "Bash(rm -rf ~:*)",
      "Bash(rm -rf $HOME:*)",
      "Bash(rm -rf /home:*)",
      "Bash(sudo:*)",
      "Bash(chmod -R 777 /:*)",
      "Bash(mkfs:*)",
      "Bash(dd if=:*)",
      "Bash(git push --force main:*)",
      "Bash(git push --force master:*)",
      "Bash(git push -f main:*)",
      "Bash(git push -f master:*)",
      "Bash(drop database:*)",
      "Bash(drop table:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); printf \"%s in %s\" \"$(echo \"$input\" | jq -r '.model.display_name')\" \"$(basename \"$(echo \"$input\" | jq -r '.workspace.current_dir')\")\""
  },
  "enabledPlugins": {
    "ralph-wiggum@claude-code-plugins": true,
    "ultrathink@claude-code-marketplace": true,
    "explore@claude-code-marketplace": true,
    "plan@claude-code-marketplace": true,
    "code-review@claude-code-marketplace": true,
    "audit@claude-code-marketplace": true,
    "bug-detective@claude-code-marketplace": true,
    "commit@claude-code-marketplace": true,
    "pr-review@claude-code-marketplace": true,
    "fix-issue@claude-code-marketplace": true,
    "debugger@claude-code-marketplace": true,
    "test-file@claude-code-marketplace": true,
    "analyze-codebase@claude-code-marketplace": true,
    "security-guidance@claude-code-plugins": true,
    "experienced-engineer@claude-code-marketplace": true
  },
  "alwaysThinkingEnabled": true,
  "trustedCommands": [
    "curl:*",
    "gh:*",
    "npm:*",
    "pnpm:*",
    "yarn:*",
    "bun:*"
  ],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/session-recovery.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/session-start.py",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/magic-keywords.py",
            "timeout": 3
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/user-prompt-submit.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/pre-bash.py"
          }
        ]
      },
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/pre-edit.py"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/spec-check.py",
            "timeout": 3
          }
        ]
      },
      {
        "matcher": "mcp__.*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/pre-mcp.py",
            "timeout": 3
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/post-bash.py"
          }
        ]
      },
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/post-edit.py"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/subagent-stop.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/verification-loop.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/unified-loop.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/context-window-monitor.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/pre-compact.py",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/unified-loop.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/evolution-feedback.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/stop.py",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
